{
  "version": 2,
  "builds": [
    { "src": "backend/api/index.ts", "use": "@vercel/node" },
    {
      "src": "frontend/**",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/dist", "buildCommand": "cd frontend && npm ci && npm run build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/api/index.ts" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}


