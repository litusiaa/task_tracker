{
  "version": 2,
  "builds": [
    { "src": "frontend/vite.config.ts", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "backend/api/index.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/health", "dest": "/backend/api/index.ts" },
    { "src": "/api/(.*)", "dest": "/backend/api/index.ts" },
    { "src": "/(.*)", "dest": "/frontend/dist/$1" }
  ]
}


